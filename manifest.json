{
    "manifest_version": 2,
    "name": "Chakra",
    "description": "Interactive daily task manager",
    "version": "1.0.0",
    "icons": {
        "128": "icon_128x128.png"
    },
    "browser_action": {
        "default_icon": "icon_19x19.png",
        "default_popup": "index.html"
    },
    "permissions": ["activeTab", "storage"],
    "background": {
        "scripts": ["background_script.js"],
        "persistent": false
    },
    "content_security_policy": "script-src 'self' https://code.jquery.com/jquery-3.4.1.slim.min.js; object-src 'self'"
}